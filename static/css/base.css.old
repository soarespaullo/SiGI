html, body {
  height: 100%;
  margin: 0;
}

body {
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
}

.content-wrap {
  flex: 1;
  padding-top: 100px; /* espaço maior por causa da navbar dupla */
  padding-bottom: 20px;
}

footer {
  background-color: #f8f9fa;
  border-top: 1px solid #dee2e6;
  padding: 10px 0;
}

/* Navbar customizada */
.navbar-top {
  background-color: #0d6efd; /* azul */
  padding: 0.5rem 1rem;
}

.navbar-top .navbar-brand {
  font-size: 1.5rem;
  color: #fff;
}

.navbar-bottom {
  background-color: #343a40; /* cinza escuro */
  padding: 0.25rem 1rem;
}

.navbar-bottom .nav-link {
  color: #f8f9fa;
  margin-right: 1rem;
}

.navbar-bottom .nav-link:hover {
  color: #ffc107; /* amarelo ao passar o mouse */
}

/* Botão hamburger */
.navbar-toggler {
  border-color: rgba(255,255,255,.25);
  transition: all 0.3s ease; /* efeito suave */
}

/* Ícone hamburger branco por padrão (desktop) */
.navbar-toggler-icon {
  background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255,255,255,1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
  transition: filter 0.3s ease;
}

/* Hover no hamburger: clareia um pouco */
.navbar-toggler:hover .navbar-toggler-icon {
  filter: brightness(1.3);
}

/* Em telas pequenas, muda para amarelo (#ffc107) */
@media (max-width: 991.98px) {
  .navbar-toggler-icon {
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255,193,7,1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
  }
  .navbar-toggler:hover .navbar-toggler-icon {
    filter: brightness(1.2); /* efeito suave no amarelo */
  }
}

/* Ícones dentro dos inputs (usado em login, setup etc.) */
.form-icon {
  position: absolute;
  left: 10px;
  top: 50%;
  transform: translateY(-50%);
  color: #6c757d;
}
